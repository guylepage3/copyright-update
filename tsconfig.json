{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": [ "es2015", "dom", "dom.iterable" ],
    "outDir": "./dist/",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
